@using Microsoft.AspNetCore.Identity
@using App.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link app-tag-a-1" asp-area="Identity"  asp-controller="Manage" asp-action="Index" title="Manage">
                    <i class="far fa-user"></i> 
                    @UserManager.GetUserName(User)
                </a>
            </li>
            <li class="nav-item">
                <button title="Đăng xuất" type="submit" class="btn btn-link btn-danger navbar-btn navbar-link">
                    <i class="fas fa-sign-out-alt" style="color: white;"></i>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item ps-1">
            <a class="nav-link app-tag-a-1" asp-area="Identity" asp-controller="Account" asp-action="Register">
                <i class="far fa-registered"></i> Register
            </a>
        </li>
        
        <li class="nav-item ps-1">
            <a class="nav-link app-tag-a-1" asp-area="Identity" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
    </ul>
}