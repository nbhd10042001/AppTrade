@using App.Services
@using Microsoft.AspNetCore.Identity
@using App.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>

    <partial name="/Views/Shared/Partials/LoadLibrary/_Lib_Css_AdminCP_Partial.cshtml"></partial>
    <partial name="/Views/Shared/Partials/LoadLibrary/_Lib_Js_AdminCP_Partial.cshtml"></partial>

</head>

<body id="page-top" style="margin-bottom: 0px;">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center"
                asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="mx-3">TradeGun</div>
            </a>

            
            <partial name="/Views/Shared/Partials/_SidebarPartial.cshtml"></partial>

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="dark-mode-button">
                    <i id="icon-dark-mode" class="fas"></i> </a> 
                </button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav id="topbar-admin" class="navbar navbar-expand navbar-light topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    @* <h1>@ViewData["Title"]</h1> *@

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        @if(string.IsNullOrEmpty(UserManager.GetUserName(User)) == false)
                        {
                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow" >
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                        <i class="far fa-user"></i> 
                                        @UserManager.GetUserName(User)
                                    </span>
                                </a>
                                
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby="userDropdown">

                                    <a class="dropdown-item"
                                        asp-controller="Manage" asp-action="Index" asp-area="Identity">
                                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i> Profile
                                    </a>

                                    <div class="dropdown-divider"></div>

                                    <form class="dropdown-item" 
                                        asp-area="Identity" asp-controller="Account" asp-action="LogOff" 
                                        method="post" id="logoutForm">
                                            <button title="Đăng xuất" type="submit" class="btn navbar-btn">
                                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Logout
                                            </button>
                                    </form>

                                </div>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt "></i> Login
                                </a>
                            </li>
                        }

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800"></h1>
                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer id="footer-admin" class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; App MVC</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Custom scripts for all pages-->
    @* phai de sb-admin.js o duoi cung *@
    <script src="~/js/sb-admin-2.min.js"></script> 

</body>

</html>