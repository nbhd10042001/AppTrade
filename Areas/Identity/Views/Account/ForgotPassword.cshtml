@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LayoutLogin";
}

<style>
    .bg-login-image{
        @* background-image: url(https://fiverr-res.cloudinary.com/images/q_auto,f_auto/gigs2/321944840/original/fe0705baf8ed274f0ab0816a7b45835d6304476b/make-a-3d-render-of-your-csgo-skins.png); *@
        background-image: none;
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
    }
</style>

@*  *@
<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div id="card-login" class="row ">
            <div class="col-3 d-none d-lg-block"></div>

            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 mb-2">Bạn quên mật khẩu?</h1>
                        <p class="mb-4">Hãy nhập địa chỉ email của tài khoản để lấy mật khẩu!</p>
                    </div>

                    <form class="user" method="post">
                        <div class="form-group">
                            <input asp-for="Email" type="email" 
                                class="form-control form-control-user"
                                aria-describedby="emailHelp"
                                placeholder="Enter Email Address...">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Gửi
                        </button>
                    </form>

                    <hr>
                    <div class="text-center">
                        <a class="small" asp-action="Login">Đăng nhập</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký</a>
                    </div>
                </div>
            </div>

            <div class="col-3 d-none d-lg-block"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
